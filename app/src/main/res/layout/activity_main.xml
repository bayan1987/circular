<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="steep.circular.activities.MainActivity"
    android:background="@drawable/background_gradient">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:weightSum="1"
        android:background="#48ffffff">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"

            android:id="@+id/toolbar"
            android:layout_weight="1" />

    </android.support.design.widget.AppBarLayout>

    <steep.circular.view.CircleCalendarView android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="468dp"

        android:elevation="0dp" />


    <LinearLayout
        android:id="@+id/bottom_sheet1"
        android:layout_width="match_parent"
        android:clipToPadding="true"
        android:background="#48ffffff"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:orientation="vertical"
        android:layout_height="450dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="11.01.2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="11dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="80dp">

            <Button
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="@drawable/bottomsheet_circle"
                android:elevation="0dp"
                android:layout_height="60dp"
                android:layout_width="60dp" />

            <Button
                android:id="@+id/button4"
                android:background="@drawable/bottomsheet_circle"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </RelativeLayout>

        <ListView
                android:id="@+id/event_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_bottomsheet"
                android:padding="16dp"
                android:textSize="16sp"/>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
